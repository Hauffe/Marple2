<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EditRestrictionActivity">

    <EditText
        android:id="@+id/restricionNameTxt"
        android:layout_width="368dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/text_hint"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ingredientsText"
        android:layout_width="367dp"
        android:layout_height="297dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/ingredients_text_hint"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restricionNameTxt" />

    <Button
        android:id="@+id/deleteRestrictionBtn"
        android:layout_width="324dp"
        android:layout_height="47dp"
        android:background="@drawable/roundedbuttonred"
        android:onClick="delete_restriction"
        android:text="@string/delete"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateRestrictionBtn"
        app:layout_constraintVertical_bias="0.337" />

    <Button
        android:id="@+id/updateRestrictionBtn"
        android:layout_width="324dp"
        android:layout_height="47dp"
        android:background="@drawable/roundedbutton"
        android:onClick="update_restriction"
        android:text="@string/update"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingredientsText"
        app:layout_constraintVertical_bias="0.598" />

</androidx.constraintlayout.widget.ConstraintLayout>